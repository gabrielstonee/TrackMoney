<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="vertical"
    android:padding="9dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textDescrição"
            android:layout_width="231dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="Descrição"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textValor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center|right|center_horizontal|center_vertical"
            android:layout_weight="1"
            android:foregroundGravity="center_vertical|center|right|center_horizontal"
            android:gravity="center|right|center_horizontal|center_vertical"
            android:text="Valor"
            android:textColor="@color/colorPrimaryDarkReceitas" />
    </LinearLayout>

    <TextView
        android:id="@+id/textCategoria"
        android:layout_width="396dp"
        android:layout_height="31dp"
        android:gravity="bottom"
        android:text="Categoria"
        />
</LinearLayout>